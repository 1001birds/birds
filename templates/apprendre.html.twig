{% extends 'base.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row top10">
            <div class="col-xs-12">
                <h3>Apprendre</h3>
            </div>
            <div class="col-xs-12 col-sm-6">
                {% if image is defined %}
                    <img id="img"
                         class="img-fluid responsive radius5white"
                         alt="zer"
                         title="zer"
                         src="{{ '/build/images/oiseaux/'~image }}">
                {% else %}
                    Il y a un probl√®me pour <span class="text-danger">{{ erreur }}</span>
                {% endif %}
            </div>
            <div class="hidden-xs col-sm-6">
            </div>
            {#
            BOUTONS
            SI IMAGHE EXISTE
            #}
            <div class="col-xs-2 col-sm-1 top5">
                {% if image is defined %}
                    <button id="seeName"
                            title="Voir le nom"
                            class="btn btn-default">
                        voir
                        {#                    <span class="glyphicon glyphicons-eye-open"></span>#}
                    </button>
                {% endif %}
            </div>
            {#
            SUIVANT
            #}
            <div class="col-xs-2 col-sm-1 top10">

                <button id="next"
                        title="Suivant"
                        class="btn btn-default pull-right">
                    suivant
                    {#                    <span class="glyphicon glyphicons-arrow-left"></span>#}
                </button>
            </div>
            <div class="col-xs-7 col-sm-4 top10 text-center">
                {% if image is defined %}
                    <b id="name" class="d-none">{{ nom }}</b>
                {% endif %}
            </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type='text/javascript' src="{{ asset('build/js/apprendre.js') }}"></script>
{% endblock %}
