{% extends 'base.html.twig' %}

{% block content %}
    <div class="container-fluid mt-1 p-3">

        <h2 class="text-muted">Fiche Oiseau</h2>
        <h4>{{ nomOriginal }}</h4>
        <p class="radius5white">{{ commentaire | nl2br }}</p>

        <div class="row">
            {% if images is not empty %}
                {% for image in images %}

                    <div class="col-xs-12 col-sm-6">
                    <img id="img"
                         class="img-fluid responsive radius5white bottom10"
                         alt="zer"
                         title="zer"
                         src="{{ image }}">
                    </div>
                {% endfor %}
            {% else %}
                <div class="col-xs-12 col-sm-6">
                    <div class="alert alert-warning">
                        <b>Pas d'images pour cet oiseau</b>
                        <br>
                        <i>Mince alors !</i>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>



{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type='text/javascript' src="{{ asset('js/birds.js') }}"></script>
{% endblock %}
